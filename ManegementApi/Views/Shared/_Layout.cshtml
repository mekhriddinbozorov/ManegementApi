<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/css/bootstrap.rtl.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<div class="container">
		<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
			<a asp-controller="home" asp-action="index" class="navbar-brand">
				<img src="~/images/user.png" width="30" height="30" asp-append-version="true" />
			</a>
			<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#hamburgerNavbar">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="hamburgerNavbar">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a asp-controller="home" asp-action="index" class="nav-link">All Staff</a>
					</li>
					<li class="nav-item">
						<a asp-controller="home" asp-action="create" class="nav-link">Create</a>
					</li>
				</ul>
			</div>
		</nav>
		<div>
			@RenderBody()
		</div>
	</div>
	@if (IsSectionDefined("Scripts"))
	{
		RenderSection("Scripts");
	}

</body>
</html>